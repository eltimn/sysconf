{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "nixos": {
      "command": ["nix", "run", "github:utensils/mcp-nixos", "--"],
      "enabled": true,
      "type": "local"
    }
  },
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "nixos-rebuild switch": "deny",
          "task switch": "deny",
          "sudo": "deny"
        }
      }
    }
  },
  "instructions": ["AGENTS.md"],
  "permission": {
    "external_directory": {
      "~/Pictures/**": "allow",
      "~/code/ai": "allow",
      "~/code/eltimn/eltimn-ai-tools": "allow"
    }
  }
}
