{
  "autoupdate": false,
  "tools": {
    "lsp": true,
    "nixos": false
  },
  "mcp": {},
  "permission": {
    "bash": {
      "git push": "ask",
      "task switch": "ask",
      "nixos-rebuild switch": "ask",
      "sudo": "deny"
    }
  },
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "git push": "allow"
        }
      }
    },
    "plan": {
      "tools": {
        "nixos": true
      }
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "{env:OPENCODE_OLLAMA_BASEURL}"
      },
      "models": {
        "gptoss": {
          "name": "GPT-OSS 20B",
          "id": "gpt-oss:20b"
        },
        "qwen3coder": {
          "name": "Qwen3 Coder 30B",
          "id": "qwen3-coder:30b"
        }
      }
    },
    "ollama-cloud": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (cloud)",
      "options": {
        "baseURL": "https://ollama.com/v1/",
        "apiKey": "{env:OPENCODE_OLLAMA_CLOUD_APIKEY}"
      },
      "models": {
        "devstral": {
          "name": "Devstral 2",
          "id": "devstral-2:123b-cloud"
        },
        "qwen3coder": {
          "name": "Qwen3 Coder 480B",
          "id": "qwen3-coder:480b-cloud"
        },
        "glm4-7": {
          "name": "GLM 4.7",
          "id": "glm-4.7:cloud"
        }
      }
    }
  }
}
