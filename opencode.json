{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "nixos": {
      "command": ["nix", "run", "github:utensils/mcp-nixos", "--"],
      "enabled": true,
      "type": "local"
    }
  },
  "permission": {
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "git": "deny",
      "ls": "allow",
      "pwd": "allow",
      "task switch": "deny",
      "sudo": "deny"
    }
  },
  "instructions": ["AGENTS.md"]
}
